<section>
    <h2 style='font-size:1.4rem; background-color: var(--light-accent); display:inline-block; padding:2px 8px;'> my latest posts</h2>
    <br /><br />    
	{% for post in postslist | reverse %}
    {% if loop.index0 < 2 %} 
		<article class='post'{% if post.url == url %} data-current="current item"{% endif %}>
			<h3>
				<a href="{{ post.url | url }}">
					{% if post.data.title %}
						{{ post.data.title }}
					{% else %}
						Untitled
					{% endif %}
				</a>
			</h3>
			{% if post.data.summary %}
				<p>
					{{ post.data.summary }}
				</p>
			{% endif %}
			<p class='meta'>
				<time datetime="{{ post.date | machineDate }}">
					<small>{{ post.date | readableDate }} by <a href="/authors/{{ post.data.author | slug }}/">{{ post.data.author }}</a></small>
				</time>
			</p>
			{% if post.data.tags %}
				<p class='tags'>
					{% for tag in post.data.tags %}
		  			{%- if tag != "post" -%}
		  				{% set tagUrl %}/tags/{{ tag }}/{% endset %}
		  			<a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
		  			{%- endif -%}
					{% endfor %}
				</p>
			{% endif %}
		</article>
        {% endif %}
	{% endfor %}
</section>
