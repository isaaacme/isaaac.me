section: page
permalink: /projects/index.html
---
<h1 class='page-title'>{{ title }}</h1>
{{ layoutContent | safe }}

{% for project in projects %}
  <div>
 
  <img src="{{project.main_image}}" alt="{{ project.title }}"/>
     <h2 style='color:var(--accent); font-size:1.4rem;'>{{ project.title }}</h2>
    <p>{{ project.description}}</p>
    <a href="{{project.link}}" class='project' target='_blank'>check it out!</a>

    <br /> <br />
  </div>
{% endfor %}
